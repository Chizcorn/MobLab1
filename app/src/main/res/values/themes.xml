<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Светлая тема -->
    <style name="Theme.BusinessCard" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary_dark_light</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:navigationBarColor">@color/background_light</item>
    </style>

    <!-- Темная тема (наследуется от основной) -->
    <style name="Theme.BusinessCard.Dark" parent="Theme.BusinessCard">
        <item name="android:statusBarColor">@color/primary_container_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>
</resources>